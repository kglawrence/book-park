<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.kglawrence.kerilawrence.book_park.LoginActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:columnCount="6"
        android:rowCount="6">

        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnRedSquare"
            android:id="@+id/btnRedSquare"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnRedCircle"
            android:id="@+id/btnRedCircle"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnRedTriangle"
            android:id="@+id/btnRedTriangle"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnRedCross"
            android:id="@+id/btnRedCross"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnRedStar"
            android:id="@+id/btnRedStar"
            android:layout_row="2"
            android:layout_column="4" />

        <Button
            android:layout_gravity="left|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnRedHeart"
            android:id="@+id/btnRedHeart"
            android:layout_row="2"
            android:layout_column="5" />

        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnBlueSquare"
            android:id="@+id/btnBlueSquare"
            android:layout_row="3"
            android:layout_column="0" />
        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnGreenSquare"
            android:id="@+id/btnGreenSquare"
            android:layout_row="4"
            android:layout_column="0" />
        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnYellowSquare"
            android:id="@+id/btnYellowSquare"
            android:layout_row="5"
            android:layout_column="0" />

        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnBlueCircle"
            android:id="@+id/btnBlueCircle"
            android:layout_row="3"
            android:layout_column="1" />
        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnGreenCircle"
            android:id="@+id/btnGreenCircle"
            android:layout_row="4"
            android:layout_column="1" />
        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnYellowCircle"
            android:id="@+id/btnYellowCircle"
            android:layout_row="5"
            android:layout_column="1" />

        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnBlueTriangle"
            android:id="@+id/btnBlueTriangle"
            android:layout_row="3"
            android:layout_column="2" />
        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnGreenTriangle"
            android:id="@+id/btnGreenTriangle"
            android:layout_row="4"
            android:layout_column="2" />
        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnYellowTriangle"
            android:id="@+id/btnYellowTriangle"
            android:layout_row="5"
            android:layout_column="2" />

        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnBlueCross"
            android:id="@+id/btnBlueCross"
            android:layout_row="3"
            android:layout_column="3" />
        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnGreenCross"
            android:id="@+id/btnGreenCross"
            android:layout_row="4"
            android:layout_column="3" />
        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnYellowCross"
            android:id="@+id/btnYellowCross"
            android:layout_row="5"
            android:layout_column="3" />

        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnBlueStar"
            android:id="@+id/btnBlueStar"
            android:layout_row="3"
            android:layout_column="4" />
        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnGreenStar"
            android:id="@+id/btnGreenStar"
            android:layout_row="4"
            android:layout_column="4" />
        <Button
            android:layout_gravity="right|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnYellowStar"
            android:id="@+id/btnYellowStar"
            android:layout_row="5"
            android:layout_column="4" />

        <Button
            android:layout_gravity="left|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnBlueHeart"
            android:id="@+id/btnBlueHeart"
            android:layout_row="3"
            android:layout_column="5" />
        <Button
            android:layout_gravity="left|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnGreenHeart"
            android:id="@+id/btnGreenHeart"
            android:layout_row="4"
            android:layout_column="5" />
        <Button
            android:layout_gravity="left|top"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="btnYellowHeart"
            android:id="@+id/btnYellowHeart"
            android:layout_row="5"
            android:layout_column="5" />
    </GridLayout>
</RelativeLayout>
